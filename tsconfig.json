{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "strict": false,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "types": ["jest", "node"],
    "resolveJsonModule": true
  },
  "include": ["src/*", "src/**/*.ts", "src/tests/login.test.ts"],
  "exclude": ["node_modules", "./node_modules", "./node_modules/*", "./node_modules/@types/node/index.d.ts"]
}
